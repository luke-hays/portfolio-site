---
const {route, text, isExternal} = Astro.props;
const {pathname} = Astro.url;

const target = isExternal ? '_blank' : '_self';
const rel = isExternal ? 'noopener noreferrer' : undefined;

const activePage = pathname === route;

const color = activePage ? 'text-cerulean' : 'text-ash';
const borderColor = activePage ? 'border-cerulean' : 'border-ash';
const bgColor = activePage ? 'bg-jet' : 'bg-transparent';

let linkStyle = `
  md:px-2
  py-1
  rounded
  border-2
  active:scale-[.97]
  transition
  ease-in-out
  hover:text-cerulean
  hover:border-cerulean
  hover:bg-jet
  text-md
  px-1
  ${color}
  ${borderColor}
  ${bgColor}
`;
---

<a 
  class={linkStyle}
  href={route}
  target={target}
  rel={rel}
>
  {text}
</a>