---
const {data, slug} = Astro.props

const date = new Date(data.publishDate)
const formattedDate = date.toLocaleString('default', { month: 'long', year: 'numeric' });
---

<li class="border-solid border-b-2 border-violet-800 last:border-b-0 py-2">
  <a href={`/posts/${slug}/`} class="flex justify-between [&>*:first-child]:hover:underline">
    <div>
      {data.title}
    </div>
    <div>
      {formattedDate}
    </div>
  </a>
</li>