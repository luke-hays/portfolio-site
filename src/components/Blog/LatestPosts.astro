---
import PostListItem from './PostListItem.astro'
import {posts} from '../../atoms/blogStore'

const latestPosts = posts.get().slice(0, 5)
---

<div>
  <ul>
    {latestPosts.map(post => {
      const formattedDate = post.publishDate.toLocaleString('default', { month: 'long', year: 'numeric' });
      return <PostListItem title={post.title} slug={post.slug} formattedDate={formattedDate} />
    })}
  </ul>
</div>