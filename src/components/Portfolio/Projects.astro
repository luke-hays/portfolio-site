---
import Project from "./Project.astro";
import type { CollectionEntry } from "astro:content";

const {projects, gridSize} = Astro.props;

let gridStyle = `
  grid
  gap-3
  grid-cols-1
  md:grid-cols-2
  ${gridSize}
`;
---

<div class=`${gridStyle}`>
  {projects.map((project: CollectionEntry<'projects'>) => <Project project={project}/>)}
</div>
