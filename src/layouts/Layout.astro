---
import SiteNav from '../components/Navigation/SiteNav.astro';
import ContactLinks from '../components/Navigation/ContactLinks.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Luke Hays Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Luke Hays</title>
	</head>
	<body class="bg-night text-white gap-10 w-80 md:w-[50rem] mx-auto my-9">
		<div class="mx-2 flex flex-col h-[calc(100vh-74px)]">
			<header class="h-6 flex justify-end items-center">
				<SiteNav />
			</header>
			<main class="grow">
				<slot />
			</main>
			<footer class="mt-10">
				<ContactLinks />
			</footer>
		</div>
	</body>
</html>
