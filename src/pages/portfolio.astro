---
import Layout from "../layouts/Layout.astro"
import Project from "../components/Portfolio/Project.astro";
import { allProjects } from "../store/projects";

const projects = allProjects.get()
---

<Layout>
  <h1>Projects</h1>
  <div class="grid grid-cols-2 gap-3">
    {projects.map(project => <Project project={project.data} includeDetails/>)}
  </div>
</Layout>